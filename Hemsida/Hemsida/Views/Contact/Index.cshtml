
@{
    ViewBag.Title = "Index";
}

<section class="w3l-contact-1">
    <div class="contacts-9 section-gap">
        <div class="wrapper">
            <h4 class="sub-title text-center">Find us</h4>
            <h3 class="global-title text-center">Contact us</h3>
            <div class="d-grid contact-view">
                <div class="cont-details">
                    <div class="cont-top">
                        <div class="cont-left text-center">
                            <span class="fa fa-phone text-primary"></span>
                        </div>
                        <div class="cont-right">
                            <h6>Call Us</h6>
                            <p><a href="tel:0739809318">+46739809318</a></p>
                        </div>
                    </div>
                    <div class="cont-top margin-up">
                        <div class="cont-left text-center">
                            <span class="fa fa-envelope-o text-primary"></span>
                        </div>
                        <div class="cont-right">
                            <h6>Email Us</h6>
                            <p><a href="marcus_batan@hotmail.com" class="mail">example@mail.com</a></p>
                        </div>
                    </div>
                    <div class="cont-top margin-up">
                        <div class="cont-left text-center">
                            <span class="fa fa-map-marker text-primary"></span>
                        </div>
                        <div class="cont-right">
                            <h6>Address</h6>
                        </div>
                    </div>
                </div>
                <div class="map-content-9">
                    <form action="Index" method="post">
                        <div class="twice-two">
                            <input type="email" class="form-control" name="from" id="from" placeholder="Email" required="">
                            <input type="password" class="form-control" name="password" id="password" placeholder="Password"
                                   required="">
                        </div>
                        <div class="twice">
                            <input type="text" class="form-control" name="subject" id="subject" placeholder="Subject"
                                   required="">
                        </div>
                        <textarea name="mess" class="form-control" id="mess" placeholder="Message"
                                  required=""></textarea>
                        <button type="submit" class="btn btn-contact">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

